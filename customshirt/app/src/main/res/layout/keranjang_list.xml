<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorSecondary"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_nama_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/img_item"
            android:hint="Nama Item"
            android:textSize="@dimen/text2" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/id_desain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:text="id"/>

        <TextView
            android:id="@+id/tv_warna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_item"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            android:layout_toRightOf="@id/img_item"
            android:hint="Jumlah"
            android:textSize="@dimen/text0" />

        <TextView
            android:id="@+id/txt_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_item"
            android:layout_marginTop="5dp"

            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/tv_warna"
            android:hint="Jumlah"
            android:textSize="@dimen/text0" />

        <TextView
            android:id="@+id/tv_ukuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_warna"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            android:layout_toRightOf="@id/img_item"
            android:hint="Ukuran"
            android:textSize="@dimen/text0" />

        <TextView
            android:id="@+id/txt_ukuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_warna"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/tv_warna"
            android:hint="Ukuran"
            android:textSize="@dimen/text0" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ukuran"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/img_item"
            android:hint="Harga"
            android:textSize="@dimen/text1" />

        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ukuran"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/tv_warna"
            android:hint="Harga"
            android:textSize="@dimen/text1" />


        <Button
            android:id="@+id/btn_edit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@id/img_item"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:text="Hapus"
            android:textSize="@dimen/text1" />


        <Button
            android:id="@+id/btn_pesanlagi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn_edit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorSecondary"
            android:text="Pesan Lagi"
            android:textSize="@dimen/text2" />


        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="25dp"
            android:hint="Total"
            android:textSize="16dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
